# ========================================
# Telegram Bot Configuration
# ========================================
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username

# ========================================
# Database Configuration
# ========================================
# For Docker Compose (using postgres service)
DATABASE_URL=postgresql://azizbot:securepassword@postgres:5432/aziz_bot_db?schema=public

# Database credentials (used by postgres container)
POSTGRES_USER=azizbot
POSTGRES_PASSWORD=securepassword
POSTGRES_DB=aziz_bot_db

# ========================================
# Application Configuration
# ========================================
NODE_ENV=production
PORT=3000

# Replace YOUR_IP with your Digital Ocean droplet IP
WEB_PANEL_URL=http://YOUR_IP:3000/admin/

# ========================================
# Payment Configuration (Optional - Payme)
# ========================================
PAYME_MERCHANT_ID=your_payme_merchant_id
PAYME_KEY=your_payme_key
PAYME_TEST_KEY=your_payme_test_key
PAYME_ENDPOINT=https://checkout.paycom.uz

